<!DOCTYPE html>
<html>
  <head>
    <title>BuildStarwars</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#starwars_collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Build a Starwars Empire", root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="starwars_collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Create a Movie", new_movie_path %></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <body>
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %> fade in" role="alert">
        <button class="close" data-dismiss="alert">Ã—</button>
        <h2 class="text-center">
          <%= message %>
        </h2>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
